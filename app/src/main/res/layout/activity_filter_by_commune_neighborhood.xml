<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/app_background"
    tools:context="isabel.cl.appbibliotecaspublicas.FilterByCommuneNeighborhood"
    android:onClick="backFilterOptions">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Filtro por Comuna o Barrio"
        android:id="@+id/filterbycbView"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textSize="27dp"
        android:textColor="#080808"
        android:typeface="serif" />

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/comboComune"
        android:layout_marginBottom="63dp"
        android:layout_above="@+id/textView4"
        android:layout_alignEnd="@+id/comboNeighborhood" />

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/comboNeighborhood"
        android:layout_alignParentBottom="true"
        android:layout_alignEnd="@+id/filterbycbView"
        android:layout_marginBottom="125dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Por Comuna:"
        android:id="@+id/textView4"
        android:layout_above="@+id/comboNeighborhood"
        android:layout_alignParentStart="true"
        android:textColor="#0d0c0c"
        android:textSize="20dp"
        android:typeface="serif" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Por Barrio:"
        android:id="@+id/textView5"
        android:layout_above="@+id/comboComune"
        android:layout_alignParentStart="true"
        android:textColor="#0b0a0a"
        android:textSize="20dp"
        android:typeface="serif" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Atras"
        android:id="@+id/btBack"
        android:background="#ff9600"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:textSize="20dp"
        android:typeface="serif" />
</RelativeLayout>
