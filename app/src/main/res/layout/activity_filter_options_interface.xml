<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/app_background"
    tools:context="isabel.cl.appbibliotecaspublicas.FilterOptionsInterface">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Consulta Bibliotecas por Parametros"
        android:id="@+id/filterOptionsView"
        android:textAlignment="center"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textColor="#0a0909"
        android:textSize="30dp"
        android:typeface="serif" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="TIPO-HORARIO"
        android:background="#ff9600"
        android:id="@+id/btTypeSchedule"
        android:layout_marginTop="87dp"
        android:textSize="20dp"
        android:layout_below="@+id/filterOptionsView"
        android:layout_centerHorizontal="true"
        android:onClick="goFilterByTH"
        android:typeface="serif" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="COMUNA-BARRIO"
        android:background="#ff9600"
        android:id="@+id/btCommuneNeighborhood"
        android:layout_marginTop="60dp"
        android:textSize="20dp"
        android:layout_below="@+id/btTypeSchedule"
        android:layout_alignStart="@+id/btTypeSchedule"
        android:onClick="goFilterByCB"
        android:typeface="serif" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ATRÁS"
        android:background="#ff9600"
        android:id="@+id/btBackOptions"
        android:layout_marginTop="56dp"
        android:textSize="20dp"
        android:layout_below="@+id/btCommuneNeighborhood"
        android:layout_alignStart="@+id/btCommuneNeighborhood"
        android:onClick="goOptions"
        android:typeface="serif" />
</RelativeLayout>
