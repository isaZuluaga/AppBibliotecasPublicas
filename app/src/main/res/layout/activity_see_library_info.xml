<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/app_background"
    tools:context="isabel.cl.appbibliotecaspublicas.SeeLibraryInfo"
    android:onClick="goMail">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Consultar Información biblioteca"
        android:id="@+id/textView2"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textAlignment="center"
        android:textColor="#0d0d0d"
        android:textSize="30dp"
        android:typeface="serif" />

    <Spinner
        android:id="@+id/comboLibrary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView2"
        android:layout_alignParentStart="true"></Spinner>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Nombre Biblioteca"
        android:id="@+id/libraryNAME"
        android:textSize="19dp"
        android:textColor="#0e0d0d"
        android:layout_above="@+id/libraryTEL"
        android:layout_alignParentStart="true"
        android:typeface="serif" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Telefóno"
        android:id="@+id/libraryTEL"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true"
        android:textColor="#080707"
        android:textSize="19dp"
        android:typeface="serif" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Dirección "
        android:id="@+id/libraryDir"
        android:textColor="#0a0909"
        android:textSize="19dp"
        android:layout_below="@+id/libraryTEL"
        android:layout_alignParentStart="true"
        android:typeface="serif" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Comuna"
        android:id="@+id/libraryCommune"
        android:layout_below="@+id/libraryDir"
        android:layout_alignParentStart="true"
        android:typeface="serif"
        android:textSize="19dp"
        android:textColor="#100f0f" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Barrio"
        android:id="@+id/libraryNeighborhood"
        android:layout_below="@+id/libraryCommune"
        android:layout_alignParentStart="true"
        android:textSize="19dp"
        android:textColor="#060505"
        android:typeface="serif" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Horario"
        android:id="@+id/librarySchedule"
        android:layout_below="@+id/libraryNeighborhood"
        android:layout_alignParentStart="true"
        android:textColor="#0a0a0a"
        android:textSize="19dp"
        android:typeface="serif" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="ID"
        android:id="@+id/libraryId"
        android:layout_above="@+id/libraryNAME"
        android:layout_alignParentStart="true"
        android:textColor="#0f0e0e"
        android:typeface="serif"
        android:textSize="19dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Link"
        android:id="@+id/libraryLink"
        android:textColor="#2c4be9"
        android:textSize="19dp"
        android:typeface="serif"
        android:onClick="goWeb"
        android:layout_below="@+id/libraryMail"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enviar Correo"
        android:background="#ff9600"
        android:id="@+id/btGoMail"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:onClick="goMail"
        android:typeface="serif" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Salir"
        android:id="@+id/btExit"
        android:background="#ff9600"
        android:onClick="exit"
        android:layout_alignTop="@+id/btGoMail"
        android:layout_alignParentEnd="true"
        android:typeface="serif" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Correo"
        android:id="@+id/libraryMail"
        android:layout_below="@+id/librarySchedule"
        android:layout_alignParentStart="true"
        android:textSize="19dp"
        android:textColor="#090909" />

</RelativeLayout>
