<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/app_background"
    tools:context="isabel.cl.appbibliotecaspublicas.LibraryInformationInterface">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Información de la biblioteca por filtro"
        android:id="@+id/textView"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textSize="32dp"
        android:textColor="#141212"
        android:typeface="serif"
        android:textAlignment="center" />

    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/comboFilterResult"
        android:layout_below="@+id/textView"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="ID"
        android:id="@+id/libraryID"
        android:textColor="#0d0c0c"
        android:textSize="20dp"
        android:typeface="serif"
        android:layout_above="@+id/libraryNAME"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Nombre"
        android:id="@+id/libraryNAME"
        android:textColor="#060505"
        android:textSize="20dp"
        android:typeface="serif"
        android:layout_above="@+id/libraryTEL"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Telefóno"
        android:id="@+id/libraryTEL"
        android:textSize="20dp"
        android:textColor="#0b0b0b"
        android:typeface="serif"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Dirección"
        android:id="@+id/libraryADD"
        android:textSize="20dp"
        android:textColor="#181717"
        android:typeface="serif"
        android:layout_below="@+id/libraryTEL"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="param1"
        android:id="@+id/typeReceiver"
        android:typeface="serif"
        android:textSize="22dp"
        android:textColor="#060606"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="78dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="param2"
        android:id="@+id/scheduleReceiver"
        android:layout_alignBottom="@+id/typeReceiver"
        android:layout_alignParentEnd="true"
        android:typeface="serif"
        android:textSize="22dp"
        android:textColor="#080808" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Correo"
        android:id="@+id/libraryMAIL"
        android:textColor="#090909"
        android:textSize="20dp"
        android:typeface="serif"
        android:layout_below="@+id/libraryADD"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Link"
        android:id="@+id/libraryLINK"
        android:layout_below="@+id/libraryMAIL"
        android:layout_alignParentStart="true"
        android:onClick="goLink"
        android:textColor="#173fb4"
        android:textSize="19dp"
        android:typeface="serif" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enviar Correo"
        android:background="#ff9600"
        android:id="@+id/button"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:typeface="serif"
        android:onClick="doMail" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Salir"
        android:background="#ff9600"
        android:id="@+id/button2"
        android:layout_alignBottom="@+id/button"
        android:layout_alignParentEnd="true"
        android:typeface="serif"
        android:onClick="doExit" />

</RelativeLayout>
